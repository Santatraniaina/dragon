<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="professor_form_view" model="ir.ui.view">
            <field name="name">professor.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='vat']" position="after">
                    <field name="tif" required='True'/>
                    <field name="stat" />
                    <field name="rcs"/>
                </xpath>

            </field>
        </record>

        <record id="professor_list_view" model="ir.ui.view">
            <field name="name">professor.list.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='email']" position="after" >
                    <field name="tif" optional="hide"/>
                    <field name="stat" optional="hide"/>
                    <field name="rcs" optional="hide"/>
                </xpath>

            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="res_partner_action">
          <field name="name">Professor</field>
          <field name="res_model">res.partner</field>
          <field name="view_mode">tree,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Student Management" id="student_base_root"/>

        <!-- menu categories -->
        <menuitem name="Student" id="student_base_menu" parent="student_base_root"/>

        <!-- actions -->
        <menuitem name="Professor" id="professor_menu_list" parent="student_base_menu" action="res_partner_action"/>
    </data>
</odoo>